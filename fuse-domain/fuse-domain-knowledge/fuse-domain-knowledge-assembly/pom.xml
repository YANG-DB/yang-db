<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>fuse-domain-knowledge</artifactId>
        <groupId>com.yangdb</groupId>
        <version>0.51-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <artifactId>fuse-domain-knowledge-assembly</artifactId>
    <properties>
        <checkstyle.skip>true</checkstyle.skip>
        <assembly>knowledge-knowledge</assembly>
    </properties>

    <dependencies>
        <!-- logging        -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.internetitem</groupId>
            <artifactId>logback-elasticsearch-appender</artifactId>
        </dependency>

        <!-- fuse dependencies        -->
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-asg</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-dv-epb</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-dv-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-dv-unipop</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-dv-asg</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-dv-gta</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-service</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-model</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-dv-stat</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-domain-knowledge-ext</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-domain-knowledge-tutorial</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-test-framework</artifactId>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-geojson</artifactId>
        </dependency>
          <!--  jmx monitoring      -->
        <dependency>
            <groupId>org.jolokia</groupId>
            <artifactId>jolokia-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jolokia</groupId>
            <artifactId>jolokia-jvm</artifactId>
            <classifier>agent</classifier>
        </dependency>

        <!--Tests-->
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>uk.co.datumedge</groupId>
            <artifactId>hamcrest-json</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-service</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.yangdb</groupId>
            <artifactId>fuse-model</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>knowledge</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>${maven-pgp-plugin.version}</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jolokia</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${distr.dir}/${assembly}/lib</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jolokia</groupId>
                                    <artifactId>jolokia-jvm</artifactId>
                                    <version>${jolokia}</version>
                                    <classifier>agent</classifier>
                                    <destFileName>jolokia-agent.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>...</mainClass>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Build>${project.version}</Implementation-Build>
                        </manifestEntries>
                    </archive>
                    <descriptors>
                        <descriptor>assembly/fuse.folder.service.engine3.knowledge.xml</descriptor>
                        <descriptor>assembly/fuse.zip.service.engine3.knowledge.xml</descriptor>
                    </descriptors>
                    <outputDirectory>${distr.dir}/</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>knowledge</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>