<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>fuse-Dragons</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Dragons/indexTemplates</directory>
            <outputDirectory>./indexTemplates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Dragons/ontology</directory>
            <outputDirectory>./ontology</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Dragons/dataset</directory>
            <outputDirectory>./rules</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source></source>
        </file>
        <file>
            <source>${project.basedir}/resources/assembly/Dragons/config/application.test.engine3.m1.dfs.dragons.public.conf</source>
            <outputDirectory>./config</outputDirectory>
            <destName>application.conf</destName>
        </file>
        <file>
            <source>${project.basedir}/resources/logConfig/logback.xml</source>
            <outputDirectory>./config</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/standard/start-fuse-service.bat</source>
            <outputDirectory>./</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/standard/start-fuse-service.sh</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>